{
    "name": "brotkrueml/codehighlight",
    "type": "typo3-cms-extension",
    "license": "GPL-2.0-or-later",
    "description": "Code highlighter for various programming languages",
    "authors": [
        {
            "name": "Chris MÃ¼ller",
            "role": "Developer"
        }
    ],
    "keywords": [
        "TYPO3 CMS",
        "TYPO3 extension",
        "Syntax highlighting",
        "Code highlighting"
    ],
    "require": {
        "typo3/cms-backend": "^9.5.5 || ^10.0",
        "typo3/cms-core": "^9.5.5 || ^10.0",
        "typo3/cms-frontend": "^9.5.5 || ^10.0"
    },
    "suggest": {
        "typo3/cms-t3editor": "^9.5.5 || ^10.0"
    },
    "autoload": {
        "psr-4": {
            "Brotkrueml\\CodeHighlight\\": "Classes/"
        }
    },
    "config": {
        "sort-packages": true,
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "extra": {
        "typo3/cms": {
            "app-dir": ".Build",
            "web-dir": ".Build/web"
        }
    },
    "scripts": {
        "extension-init": [
            "rm -rf ../extension-release/*"
        ],
        "extension-copy": [
            "mkdir -p ../extension-release",
            "cp -ra * ../extension-release/"
        ],
        "extension-cleanup": [
            "rm -f ../extension-release/composer.lock",
            "rm -f ../extension-release/CHANGELOG.md",
            "rm -f ../extension-release/README.md",
            "rm -rf ../extension-release/Build",
            "rm -rf ../extension-release/Documentation*"
        ],
        "extension-zip": [
            "cd ../extension-release/; grep -Po \"(?<='version' => ')([0-9]+\\.[0-9]+\\.[0-9]+)\" ext_emconf.php | xargs -I {version} sh -c 'rm -fv ../codehighlight-{version}.zip; zip -r ../codehighlight-{version}.zip *'"
        ],
        "extension-release": [
            "@extension-init",
            "@extension-copy",
            "@extension-cleanup",
            "@extension-zip"
        ]
    }
}
